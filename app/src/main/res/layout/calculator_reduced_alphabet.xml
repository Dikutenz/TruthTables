<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="4dp">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/cr_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="@color/colorPrimaryLight"
        android:text="c"
        app:layout_constraintBaseline_toBaselineOf="@+id/br_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/br_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ar_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="@color/colorPrimaryLight"
        android:text="a"
        app:layout_constraintEnd_toStartOf="@+id/br_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/br_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="@color/colorPrimaryLight"
        android:text="b"
        app:layout_constraintBaseline_toBaselineOf="@+id/ar_button"
        app:layout_constraintEnd_toStartOf="@+id/cr_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ar_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/xr_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="@color/colorPrimaryLight"
        android:text="x"
        app:layout_constraintBaseline_toBaselineOf="@+id/yr_button"
        app:layout_constraintEnd_toStartOf="@+id/yr_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/yr_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="@color/colorPrimaryLight"
        android:text="y"
        app:layout_constraintBaseline_toBaselineOf="@+id/zr_button"
        app:layout_constraintEnd_toStartOf="@+id/zr_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/xr_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/zr_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/colorPrimaryLight"
        android:text="z"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/yr_button"
        app:layout_constraintTop_toBottomOf="@+id/cr_button" />

</androidx.constraintlayout.widget.ConstraintLayout>